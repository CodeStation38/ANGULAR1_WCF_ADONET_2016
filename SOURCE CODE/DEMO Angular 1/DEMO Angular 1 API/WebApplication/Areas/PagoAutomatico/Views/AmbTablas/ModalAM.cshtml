<div class="modal-header">
    <button type="button" class="close" ng-click="cancel()" data-dismiss="modal" aria-hidden="true">&times</button>
    <h3 class="modal-title">Alta Item</h3>
</div>
<div class="modal-body">
    <form name="formAlta">
        <div class="row" ng-repeat="campo in campos" >
            <div class="col-lg-6 col-md-6">
                <div ng-show="{{!campo.esIdentity}} && {{campo.tablaFK == null }}">
                    <label>{{campo.etiqueta}} </label>
                    <input type="text" class="form-control" name="{{campo.nombreCampo}}" />
                </div>
                <div ng-show="{{!campo.esIdentity}} && {{campo.tablaFK != null }}">
                    <label>{{campo.etiqueta}} </label>
                    <select>
                        <option value="">SELECCIONAR</option>
                        <option ng-repeat="campoRelacion in obtenerTablaRelacionada(campo.tablaFK)" value="{{campoRelacion.pkFK}}">{{campoRelacion.descFK}}</option>
                    </select>   
                </div>
                @*<label>{{campo.etiqueta}} </label>
                <input type="text" ng-show="{{!campo.esIdentity}} && {{campo.tablaFK == null }}" class="form-control" name="{{campo.nombreCampo}}" />
                <label>{{campo.etiqueta}} </label>
                <select ng-show="{{!campo.esIdentity}} && {{campo.tablaFK != null }}"></select>*@
            </div>
        </div>
            <div class="modal-footer">

                <button class="btn btn-danger" ng-click="cancel()">Cancelar</button>
                <button type="submit" class="btn btn-success" ng-click="alta()">Aceptar</button>
            </div>
    </form>
</div>


